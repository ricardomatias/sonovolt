{
    "$schema": "https://raw.githubusercontent.com/platformio/platformio-core/develop/platformio/assets/schema/library.json",
    "name": "Sonovolt",
    "version": "0.1.0",
    "description": "A library for audio embedded applications",
    "keywords": [
        "Sonovolt"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ricardomatias/sonovolt.git"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ricardo Matias",
            "email": "ricardo.matias0@gmail.com",
            "url": "https://ricardomatias.net"
        }
    ],
    "build": {
        "flags": [
            "-Irp2040/include"
        ],
        "srcDir": "./",
        "srcFilter": "+<src> +<rp2040> -<daisy> -<cmake> -<tests>",
        "includeDir": "./include"
    },
    "frameworks": [
        "arduino"
    ],
    "platforms": [
        "raspberrypi"
    ]
}
